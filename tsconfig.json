{
  "compilerOptions": {
    "target": "es6",                           
    "module": "commonjs",                       
    "outDir": "./dist",                         
    "rootDir": "./src",                         
    "esModuleInterop": true,                    
    "forceConsistentCasingInFileNames": true,   
    "skipLibCheck": true,                       
    "strict": true                             
  },
  "include": [
    "src/**/*.ts"                              
  ],
  "exclude": [
    "node_modules"                              
  ]
}
